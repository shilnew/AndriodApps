<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shilpa.ianc.JoinUs"
    android:background="@drawable/indiaflag4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="India Association of Northern Colorado"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:id="@+id/tblMembers"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow>
        <TextView
            android:layout_column="1"
            android:text="President"
            android:padding="3dip"
            android:background="#FF909090"
            android:textColor="#FFFFFF"/>
        <TextView
            android:text="Alpana Damle"
            android:gravity="right"
            android:padding="3dip"
            android:background="#FF909090"
            android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Vice-President"
                android:padding="3dip"
                android:background="#FFFFFFFF"
                android:textColor="#000000"/>
            <TextView
                android:text="Subash Shivkumaran"
                android:gravity="right"
                android:padding="3dip"
                android:background="#FFFFFFFF"
                android:textColor="#000000"/>/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Cultural Secretary"
                android:padding="3dip"
                android:background="#FF909090"
                android:textColor="#FFFFFF"/>
            <TextView
                android:text="Shilpa Venkateswaran"
                android:gravity="right"
                android:padding="3dip"
                android:background="#FF909090"
                android:textColor="#FFFFFF"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Treasurer"
                android:padding="3dip"
                android:background="#FFFFFFFF"
                android:textColor="#000000"/>/>
            <TextView
                android:text="Mani Subramanium"
                android:gravity="right"
                android:padding="3dip"
                android:background="#FFFFFFFF"
                android:textColor="#000000"/>/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Secretary"
                android:padding="3dip"
                android:background="#FF909090"
                android:textColor="#FFFFFF"/>
            <TextView
                android:text="Jeevesh Jee"
                android:gravity="right"
                android:padding="3dip"
                android:background="#FF909090"
                android:textColor="#FFFFFF"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>
